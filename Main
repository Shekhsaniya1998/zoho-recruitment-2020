import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    int n=sc.nextInt();
	    int i,j,k,val=1;
	    for(i=0;i<n;i++)
	    {
	        for(k=1;k<n-i;k++)
	        {
	            System.out.print(" ");
	        }
	        for(j=0;j<=i;j++)
	        {
	            System.out.print(val+" ");
	            val++;
	        }
	        System.out.println();
	    }

	}
}
